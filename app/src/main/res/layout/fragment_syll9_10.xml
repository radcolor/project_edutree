<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.littlegiants.android.edutree.Syll9_Fragment"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.lucasurbas.listitemview.ListItemView
            android:id="@+id/maths_syll_910"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:theme="@style/AppTheme"
            app:liv_circularIcon="true"
            app:liv_circularIconColor="@color/common_google_signin_btn_text_light_default"
            app:liv_icon="@drawable/ic_syllabus"
            app:liv_title="Mathematics Syllabus 2017-18" />

        <com.lucasurbas.listitemview.ListItemView
            android:id="@+id/physics_syll_910"
